<Window x:Name="PasswdChangeWindow" x:Class="SecureMe.PasswdChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password:" Height="429.5" Width="670" Opacity="0.8">
    <Grid Margin="0,0,0,-1">
        <Label x:Name="PasswdLabel" Content="Password:" HorizontalAlignment="Left" Margin="50,196,0,0" VerticalAlignment="Top" Height="42" Width="122" FontSize="20"/>
        <TextBox x:Name="SetPasswdBox" HorizontalAlignment="Left" Height="26" Margin="185,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" RenderTransformOrigin="0.496,1.109"/>
        <Image x:Name="LockImage" Height="158" Margin="248,24,256,0" VerticalAlignment="Top" Source="Images/PassChangeIMG.png"/>
        <Button x:Name="SetPasswdButton" Content="Set" HorizontalAlignment="Left" Margin="548,208,0,0" VerticalAlignment="Top" Width="74" Click="SetPasswdButton_Click"/>

    </Grid>
</Window>

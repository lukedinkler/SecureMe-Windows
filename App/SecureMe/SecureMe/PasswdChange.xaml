<Window x:Name="PasswdChangeWindow" x:Class="SecureMe.PasswdChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password:" Height="429.5" Width="670" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Images/SecureMeIcon-D1.ico">
    <Grid Margin="0,0,0,-1">
        <Label x:Name="PasswdLabel" Content="Password:" HorizontalAlignment="Left" Margin="50,196,0,0" VerticalAlignment="Top" Height="42" Width="122" FontSize="20"/>
        <Image x:Name="LockImage" Height="158" Margin="251,24,253,0" VerticalAlignment="Top" Source="Images/PassChangeIMG.png"/>
        <PasswordBox x:Name="SetPasswdBox" HorizontalAlignment="Left" Margin="177,202,0,0" VerticalAlignment="Top" Width="328" Height="32" FontSize="24" KeyDown="SetPasswdBox_KeyDown"/>
        <Image x:Name="SetPasswdBtn" HorizontalAlignment="Left" Height="46" Margin="549,194,0,0" VerticalAlignment="Top" Width="51" Source="Images/Green_Arrow.png" MouseEnter="SetPasswdBtn_MouseEnter" MouseLeave="SetPasswdBtn_MouseLeave" MouseDown="SetPasswdBtn_MouseDown" Cursor="Hand"/>

    </Grid>
</Window>
